<div class="text-center mt-5" id="cv">
    <h2 class="title blue">
        {% trans %}
            cv
        {% endtrans %}
    </h2>
    <h3 class="subtitle-section sub-title-blue">
        {% trans %}
            cv.subtitle
        {% endtrans %}
    </h3>
    <div class="margin-underline">
        <div class="underline-title line-blue"></div>
    </div>
</div>

<div class="cv-field">

    <div>
        <div class="d-flex justify-content-between">
            <div class="col-5" data-aos="fade-right">

                <div class="text-center">
                    <i class="far fa-comment-alt blue-icon icon"></i>
                    <h3 class="mt-3 base-text-blue">
                        {% trans %}
                            presentation
                        {% endtrans %}
                    </h3>
                </div>

                <p class="m-5 text-justify base-text-blue">
                    {% if age is not null %}
                        <span class="subtitle bolder base-text-blue">
                            {{ age }} {% trans %}ans{% endtrans %},
                            {% if presentation is not null and app.request.locale == 'fr' %}
                                {{ presentation.liscences }}, {{ presentation.locality }}
                            {% elseif presentation is not null %}
                                {{ presentation.liscencesEn }}, {{ presentation.locality }}
                            {% endif %}
                            .
                        </span>
                    {% endif %}

                    <div class="base-text-blue">
                        {% if presentation is not null and app.request.locale == 'fr' %}
                            {{ presentation.presentation|raw }}
                        {% elseif presentation is not null %}
                            {{ presentation.presentationEn|raw }}
                        {% endif %}
                    </div>
                </p>
            </div>

            <div class="col-7">

                <div class="text-center">
                    <i class="fas fa-laptop-code blue-icon icon"></i>
                    <h3 class="mt-3 base-text-blue">
                        {% trans %}
                            skills
                        {% endtrans %}
                    </h3>
                </div>

                {% for skillReference, skill in skills %}

                    <div class="d-flex justify-content-center rotate-zoom-out">

                        {% for skillItem in skill %}
                            <div class="d-flex flex-column logo-skills mx-3" data-aos="flip-down">
                                <div class="text-center logo-text blue">
                                    {{ skillItem.title }}
                                </div>
                                <img src="{{ asset('build/images/'~skillItem.image) }}"
                                     class="img-height"
                                     title="Logo {{ skillItem.title }}"
                                     alt="{{ skillItem.altTitle }}"
                                >
                            </div>
                        {% endfor %}

                    </div>
                {% endfor %}
            </div>
        </div>

    </div>

    <div>
        <h3 class="base-text-blue">
            <i class="fas fa-chevron-right blue-icon"></i>
            {% trans %}
                experiences
            {% endtrans %}
        </h3>

        <p class="m-5">
            {% if app.request.locale == 'fr' %}
                <timeline-zone></timeline-zone>
            {% else %}
                <timeline-en-zone></timeline-en-zone>
            {% endif %}
        </p>
    </div>

    <div>
        <h3 class="base-text-blue">
            <i class="fas fa-chevron-right blue-icon"></i>
            {% trans %}
                more.informations
            {% endtrans %}
        </h3>
        <div class="m-5">
            <div class="d-flex justify-content-between align-content-center">

                {% for softSkillReference, softSkill in softSkills %}

                    <div class="d-flex flex-column justify-content-around mx-5">

                        {% for softSkillItem in softSkill %}
                            <div class="base-text-blue"
                                 data-aos="flip-{% if loop.index is odd %}left{% else %}right{% endif %}"
                            >
                                <span class="subicon">
                                    <i class="{{ softSkillItem.icon }} blue-icon"></i>
                                </span>
                                {% if app.request.locale == 'fr' %}
                                    {{ softSkillItem.title }}
                                {% else %}
                                    {{ softSkillItem.titleEn }}
                                {% endif %}
                            </div>
                        {% endfor %}

                    </div>
                {% endfor %}

                {% if langs is not null %}
                    <div class="d-flex flex-column justify-content-around mx-5">

                        {% for lang in langs %}
                            <div class="base-text-blue"
                                 data-aos="flip-{% if loop.index is odd %}left{% else %}right{% endif %}"
                            >
                                <img class="flag"
                                     src="{{ asset('build/images/'~lang.image) }}"
                                     alt="{{ lang.altTitle }}"
                                     title="{{ lang.title }}"
                                >
                                {% if app.request.locale == 'fr' %}
                                    {{ lang.level }}
                                {% else %}
                                    {{ lang.levelEn }}
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>