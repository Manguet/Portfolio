<div class="text-center mt-5" id="temoignages">
    <h2 class="title blue">
        {% trans %}
            Comments
        {% endtrans %}
    </h2>
    <h3 class="subtitle-section base-text-blue">
        {% trans %}
            clients.comments
        {% endtrans %}
    </h3>
    <div class="margin-underline">
        <div class="underline-title line-blue"></div>
    </div>
</div>

<div class="temoignages-field">

    {% for testimony in testimonies %}

        <div class="col-6" data-aos="fade-{% if loop.index is odd %}right{% else %}left{% endif %}">

            <div class="d-flex align-items-center">
                <div>
                    <img
                        src="{{ asset('build/images/'~testimony.image) }}"
                        alt="{{ testimony.altTitle }}"
                        title="{{ testimony.title }}"
                        class="img-card"
                    >
                </div>

                <div class="d-flex align-items-baseline">
                    <h3>
                        <a href="{{ testimony.site }}"
                           target="_blank"
                           class="blue replace-blue"
                        >
                            {{ testimony.title }}
                        </a>
                    </h3>
                    <small class="ml-2 base-text-blue">
                        {% if app.request.locale == 'fr' %}
                            le {{ testimony.createdAt|date('d/m/Y') }}
                        {% else %}
                            the {{ testimony.createdAt|date('Y/m/d') }}
                        {% endif %}
                    </small>
                </div>
            </div>

            <p class="base-text-blue mt-3">
                {% if app.request.locale == 'fr' %}
                    {{ testimony.testimony }}
                {% else %}
                    {{ testimony.testimonyEn }}
                {% endif %}
            </p>
            <span class="base-text-blue">
                Site: <a href="{{ testimony.site }}"
                         target="_blank"
                         class="blue replace-blue"
                >
                    {{ testimony.title }}
                </a>
            </span>
        </div>
        <hr>
    {% endfor %}
</div>